<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddContactActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/addContact_contactId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="contact's id" />

        <EditText
            android:id="@+id/addContact_contactName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="contact's nickname"
            />

        <EditText
            android:id="@+id/addContact_contactServer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="contact's server"
            />

        <TextView
            android:id="@+id/addContact_errMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/addContact_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Contact" />

        <Button
            android:id="@+id/addContact_btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>